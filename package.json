{
  "name": "falcon-automation",
  "version": "1.0.0",
  "description": "AI-Powered Autonomous Testing Framework",
  "main": "falcon.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node falcon.js --url=https://example.com",
    "test:ui": "node tests/ui/LoginTest.js",
    "test:api": "node tests/api/UserApiTest.js",
    "test:db": "node tests/db/UserDBTest.js",
    "test:all": "npm run test:ui && npm run test:api && npm run test:db",
    "report": "allure generate allure-results --clean -o allure-report && allure open allure-report"
  },
  "keywords": ["AI", "Testing", "Automation", "Playwright", "Self-Healing"],
  "author": "Peyman Iravani",
  "license": "MIT",
  "dependencies": {
    "@achannarasappa/locust": "^1.3.0",
    "allure": "^3.0.0-beta.9",
    "allure-playwright": "^3.2.0",
    "axios": "^1.8.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "io": "^1.5.3",
    "mysql2": "^3.13.0",
    "openai": "^4.86.2",
    "pg": "^8.13.3",
    "playwright": "^1.51.0",
    "postgresql": "^0.0.1",
    "selenium-webdriver": "^4.29.0",
    "socket.io": "^4.8.1",
    "zaproxy": "^2.0.0-rc.6"
  }
}
